<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general"
    tools:context=".view.LearningSpace3">

    <ScrollView

        android:id="@+id/scrollView3"
        android:layout_width="246dp"
        android:layout_height="210dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/postClicked"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextMultiLine2"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Chatbox"
                android:layout_width="245dp"
                android:layout_height="match_parent"
                android:background="@drawable/textview_background"
                android:editable="false"
                android:fontFamily="@font/andika"
                android:paddingLeft="@dimen/margin_4"
                android:paddingRight="@dimen/margin_4"
                android:text="There has been no discussion yet."
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/postClicked"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/walter_turncoat"
        android:onClick="postClicked"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <ListView
        android:id="@+id/Owners"
        android:layout_width="133dp"
        android:layout_height="105dp"
        android:background="@drawable/textview_background"
        android:paddingLeft="@dimen/margin_4"
        android:paddingRight="@dimen/margin_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="132dp"
        android:layout_height="34dp"
        android:fontFamily="@font/walter_turncoat"
        android:text="Owners"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:fontFamily="@font/walter_turncoat"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/learning_topic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/walter_turncoat"
        android:text="Topic of the content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="132dp"
        android:layout_height="303dp"
        android:background="@drawable/textview_background"
        android:ems="10"
        android:fontFamily="@font/andika"
        android:gravity="start|top"
        android:inputType="textMultiLine"

        android:paddingLeft="@dimen/margin_4"
        android:paddingRight="@dimen/margin_4"
        android:text="My notes taken by me "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="67dp"
        android:layout_height="26dp"
        android:fontFamily="@font/walter_turncoat"
        android:text="Notes"
        android:textColor="@color/colorPrimary1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="125dp"
        android:layout_height="31dp"
        android:fontFamily="@font/walter_turncoat"
        android:text="Discussion"
        android:textColor="@color/colorPrimary1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559" />

    <Button
        android:fontFamily="@font/walter_turncoat"
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />

    <Button
        android:id="@+id/UpButton"
        android:layout_width="87dp"
        android:layout_height="53dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/walter_turncoat"
        android:onClick="upClicked"
        android:text="UP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="264dp"
        android:layout_height="225dp"
        app:layout_constraintBottom_toTopOf="@+id/UpButton"
        app:layout_constraintEnd_toStartOf="@+id/Owners"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/learning_topic2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ContentText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textview_background"
                android:editable="false"
                android:fontFamily="@font/andika"
                android:paddingLeft="@dimen/margin_4"
                android:paddingRight="@dimen/margin_4"
                android:text="There is no content to show"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextMultiLine2"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toEndOf="@+id/UpButton"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/discussion" />

</androidx.constraintlayout.widget.ConstraintLayout>